<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>Contact Us - Renuva</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--very-dark-brown: #3E2723;
				--dark-brown: #5C4033;
				--medium-brown: #704214;
				--brown: #8B6F47;
				--light-brown: #A0826D;
				--tan: #D4A574;
				--very-light-brown: #E8D7C3;
				--white: #FFFFFF;
			}

			body {
				font-family: 'Inter', sans-serif;
				color: var(--dark-brown);
			}

			header {
				background-color: var(--white);
				padding: 1.5rem 0;
				border-bottom: 5px solid var(--brown);
				box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
			}

			.header-content {
				max-width: 1200px;
				margin: 0 auto;
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0 2rem;
			}

			.logo {
				height: 60px;
			}

			.logo img {
				height: 100%;
				width: auto;
			}

			nav a {
				margin-left: 2rem;
				text-decoration: none;
				color: var(--dark-brown);
				font-family: 'Inter', sans-serif;
				font-weight: 500;
				font-size: 1.05rem;
				letter-spacing: 0.02em;
				text-transform: none;
				transition: color 0.3s;
			}

			nav a:hover {
				color: var(--tan);
			}

			.contact-section {
				max-width: 1200px;
				margin: 5rem auto;
				padding: 0 2rem;
			}

			.contact-container {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
			}

			.contact-image {
				width: 100%;
				height: 650px;
				object-fit: cover;
				border-radius: 20px;
				box-shadow: 0 15px 40px rgba(139, 111, 71, 0.2);
			}

			.contact-info {
				padding: 2rem;
			}

			.contact-info h2 {
				font-family: 'Inter', sans-serif;
				font-size: 3rem;
				font-weight: 600;
				letter-spacing: 0.01em;
				text-transform: none;
				color: var(--brown);
				margin-bottom: 1rem;
			}

			.contact-info p {
				font-size: 1.1rem;
				color: var(--dark-brown);
				line-height: 1.8;
				margin-bottom: 2.5rem;
			}

			.email-box {
				background: linear-gradient(135deg, var(--very-light-brown) 0%, #F5EEE6 100%);
				padding: 1.5rem;
				border-radius: 15px;
				margin-bottom: 2.5rem;
				border: 2px solid var(--tan);
				transition: all 0.3s;
			}

			.email-box:hover {
				transform: translateY(-5px);
				box-shadow: 0 10px 30px rgba(139, 111, 71, 0.15);
			}

			.email-label {
				font-family: 'Inter', sans-serif;
				font-size: 0.9rem;
				text-transform: none;
				letter-spacing: 0.03em;
				color: var(--brown);
				font-weight: 600;
				margin-bottom: 0.5rem;
			}

			.email-link {
				font-size: 1.8rem;
				color: var(--brown);
				text-decoration: none;
				font-weight: 600;
				transition: color 0.3s;
				display: block;
			}

			.email-link:hover {
				color: var(--tan);
			}

			.social-section {
				margin-top: 3rem;
			}

			.social-section h3 {
				font-family: 'Inter', sans-serif;
				font-size: 1.8rem;
				font-weight: 600;
				letter-spacing: 0.01em;
				text-transform: none;
				color: var(--brown);
				margin-bottom: 1.5rem;
			}

			.social-links {
				display: flex;
				gap: 1.5rem;
				flex-wrap: wrap;
			}

			.social-link {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				padding: 0.8rem 1.8rem;
				background: linear-gradient(135deg, var(--tan) 0%, var(--brown) 100%);
				color: var(--white);
				text-decoration: none;
				border-radius: 50px;
				font-family: 'Inter', sans-serif;
				font-weight: 600;
				letter-spacing: 0.02em;
				text-transform: none;
				transition: all 0.3s;
				box-shadow: 0 4px 15px rgba(139, 111, 71, 0.2);
			}

			.social-link:hover {
				transform: translateY(-3px);
				box-shadow: 0 8px 25px rgba(139, 111, 71, 0.3);
			}

			footer {
				background: linear-gradient(135deg, var(--light-brown) 0%, var(--brown) 100%);
				color: var(--white);
				text-align: center;
				padding: 2rem;
				margin-top: 5rem;
			}

			footer p {
				margin: 0.5rem 0;
			}

			.footer-links {
				margin-top: 1rem;
			}

			.footer-links a {
				color: var(--white);
				text-decoration: none;
				margin: 0 1rem;
				transition: color 0.3s;
			}

			.footer-links a:hover {
				color: var(--very-light-brown);
			}

			@media (max-width: 768px) {
				.header-content {
					flex-direction: column;
					gap: 1rem;
				}

				nav a {
					margin-left: 1rem;
				}

				.contact-container {
					grid-template-columns: 1fr;
					gap: 2rem;
				}

				.email-link {
					font-size: 1.3rem;
				}
			}
		</style>
	</head>
	<body>
		<!-- Header -->
		<header>
			<div class="header-content">
				<a href="/" style="text-decoration: none;">
					<div class="logo">
						<img src="/assets/images/Renuva.png" alt="Renuva">
					</div>
				</a>
				<nav>
					<a href="/about">About Us</a>
					<a href="/distributor">Distributor</a>
					<a href="/contact">Contact Us</a>
				</nav>
			</div>
		</header>

		<!-- Spacer -->
		<div style="height: 3rem;"></div>

		<!-- Contact Section -->
		<section class="contact-section">
			<div class="contact-container">
				<div>
					<img src="/assets/images/ContactusPic.png" alt="Modern kitchen transformation" class="contact-image">
				</div>

				<div class="contact-info">
					<h2>Let's Connect</h2>
					<p>Have questions about our kitchen wrapping solutions? Want to schedule a consultation? We're here to help bring your vision to life.</p>

					<div class="email-box">
						<div class="email-label">Email Us</div>
						<a href="mailto:hello@renuva.com" class="email-link">hello@renuva.com</a>
					</div>

					<div class="social-section">
						<h3>Follow Us</h3>
						<div class="social-links">
							<a href="#" class="social-link">Facebook</a>
							<a href="#" class="social-link">Instagram</a>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer>
			<p>&copy; 2026 Renuva Kitchen Wrapping. All rights reserved.</p>
			<p>Transform your kitchen, renew your space.</p>
			<div class="footer-links">
				<a href="/contact">Contact Us</a>
				<a href="/about">About</a>
				<a href="/">Home</a>
			</div>
		</footer>

	</body>
</html>
