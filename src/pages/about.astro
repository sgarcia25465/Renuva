		<title>About Us - Renuva</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--very-dark-brown: #262D26;
				--dark-brown: #5E635D;
				--medium-brown: #8D7C6E;
				--brown: #8D7C6E;
				--light-brown: #ADB69F;
				--tan: #D7C1B8;
				--cream: #F5F4EF;
				--white: #FFFFFF;
			}

			body {
				font-family: "Inter", sans-serif;
				color: var(--very-dark-brown);
				background-color: var(--white);
			}

			/* ───────── Header ───────── */
			header {
				position: sticky;
				top: 0;
				left: 0;
				width: 100%;
				z-index: 1000;
				background: rgba(250, 249, 246, 0.96);
				backdrop-filter: blur(10px);
				-webkit-backdrop-filter: blur(10px);
				padding: 1.35rem 0;
				border-bottom: none;
				box-shadow: none;
			}

			.header-content {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0 2rem 0 clamp(2.2rem, 8vw, 8rem);
			}

			.logo {
				height: 68px;
				width: 230px;
				overflow: visible;
				display: flex;
				align-items: center;
				justify-content: flex-start;
			}

			.logo img {
				height: 100%;
				width: auto;
				display: block;
				transform: scale(2.15);
				transform-origin: left center;
			}

			nav {
				display: flex;
				align-items: center;
				gap: 0.25rem;
			}

			nav a {
				text-decoration: none;
				color: var(--dark-brown);
				font-family: "Playfair Display", serif;
				font-weight: 500;
				font-size: 1.05rem;
				letter-spacing: 0.02em;
				padding: 0.5rem 1.2rem;
				border-radius: 8px;
				transition: color 0.3s, background 0.3s;
			}

			nav a:hover {
				color: var(--brown);
				background: rgba(141, 124, 110, 0.07);
			}

			nav .nav-cta {
				background: var(--brown);
				color: var(--white);
				padding: 0.5rem 1.4rem;
				border-radius: 50px;
				font-family: 'Inter', sans-serif;
				font-weight: 600;
				font-size: 0.78rem;
				letter-spacing: 0.06em;
				text-transform: uppercase;
				transition: background 0.3s, transform 0.25s;
			}

			nav .nav-cta:hover {
				background: var(--very-dark-brown);
				transform: translateY(-1px);
			}

			/* ───────── Hero ───────── */
			.hero {
				position: relative;
				min-height: 85vh;
				display: flex;
				align-items: center;
				justify-content: center;
				overflow: hidden;
				text-align: center;
			}

			.hero-bg {
				position: absolute;
				inset: -50px;
				z-index: 0;
			}

			.hero-parallax-img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				will-change: transform;
			}

			.hero-overlay {
				position: absolute;
				inset: 0;
				background: linear-gradient(
					180deg,
					rgba(38, 45, 38, 0.7) 0%,
					rgba(38, 45, 38, 0.4) 40%,
					rgba(38, 45, 38, 0.55) 100%
				);
				z-index: 1;
			}

			.hero-content {
				position: relative;
				z-index: 2;
				max-width: 800px;
				padding: 2rem;
				color: var(--white);
			}

			.hero-eyebrow {
				font-family: 'Inter', sans-serif;
				font-size: 0.8rem;
				font-weight: 600;
				letter-spacing: 0.22em;
				text-transform: uppercase;
				color: var(--tan);
				display: block;
				margin-bottom: 1.2rem;
				opacity: 0;
				animation: fadeUp 0.8s ease forwards;
				animation-delay: 0.3s;
			}

			.hero-title {
				font-family: 'Playfair Display', serif;
				font-weight: 600;
				line-height: 1.1;
				margin-bottom: 1.5rem;
			}

			.title-line {
				display: block;
				font-size: clamp(3rem, 8vw, 5.5rem);
				opacity: 0;
				transform: translateY(40px);
				animation: titleReveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
			}

			.title-line:nth-child(1) { animation-delay: 0.5s; }
			.title-line:nth-child(2) { animation-delay: 0.7s; }

			.title-accent {
				color: var(--tan);
				font-style: italic;
			}

			.hero-description {
				font-family: 'Inter', sans-serif;
				font-size: 1.12rem;
				font-weight: 300;
				line-height: 1.75;
				color: rgba(255, 255, 255, 0.85);
				max-width: 600px;
				margin: 0 auto 2.5rem;
				opacity: 0;
				animation: fadeUp 0.8s ease forwards;
				animation-delay: 1s;
			}

			.hero-scroll-indicator {
				opacity: 0;
				animation: fadeUp 0.8s ease forwards;
				animation-delay: 1.4s;
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 0.5rem;
			}

			.hero-scroll-indicator span {
				font-family: 'Inter', sans-serif;
				font-size: 0.75rem;
				letter-spacing: 0.15em;
				text-transform: uppercase;
				color: rgba(255, 255, 255, 0.5);
			}

			.scroll-arrow {
				width: 20px;
				height: 20px;
				border-right: 1.5px solid rgba(255,255,255,0.5);
				border-bottom: 1.5px solid rgba(255,255,255,0.5);
				transform: rotate(45deg);
				animation: bounceArrow 2s ease-in-out infinite;
			}

			@keyframes titleReveal {
				0% { opacity: 0; transform: translateY(40px); }
				100% { opacity: 1; transform: translateY(0); }
			}

			@keyframes fadeUp {
				0% { opacity: 0; transform: translateY(20px); }
				100% { opacity: 1; transform: translateY(0); }
			}

			@keyframes bounceArrow {
				0%, 100% { transform: rotate(45deg) translateY(0); }
				50% { transform: rotate(45deg) translateY(6px); }
			}

			/* ───────── Scroll Reveal ───────── */
			.scroll-reveal {
				opacity: 0;
				transition: opacity 0.8s ease, transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
				will-change: opacity, transform;
			}

			.scroll-reveal[data-direction="left"] {
				transform: translateX(-40px);
			}

			.scroll-reveal[data-direction="right"] {
				transform: translateX(40px);
			}

			.scroll-reveal[data-direction="up"] {
				transform: translateY(40px);
			}

			.scroll-reveal.revealed {
				opacity: 1;
				transform: translate(0, 0);
			}

			/* ───────── Our Story ───────── */
			.story-section {
				padding: 6rem 2rem;
				background: var(--white);
				overflow: hidden;
			}

			.story-container {
				max-width: 1100px;
				margin: 0 auto;
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 4rem;
				align-items: center;
			}

			.section-eyebrow {
				font-family: 'Inter', sans-serif;
				font-size: 0.78rem;
				font-weight: 600;
				letter-spacing: 0.2em;
				text-transform: uppercase;
				color: var(--light-brown);
				display: block;
				margin-bottom: 1rem;
			}

			.accent-line {
				width: 50px;
				height: 2px;
				background: var(--brown);
				margin-bottom: 1.2rem;
				transition: width 0.6s ease;
			}

			.scroll-reveal.revealed .accent-line {
				width: 80px;
			}

			.section-title {
				font-family: 'Playfair Display', serif;
				font-size: clamp(2.2rem, 4vw, 3rem);
				font-weight: 600;
				color: var(--very-dark-brown);
				margin-bottom: 1.2rem;
				line-height: 1.15;
			}

			.story-paragraph {
				font-family: 'Inter', sans-serif;
				font-size: 1.05rem;
				font-weight: 300;
				line-height: 1.85;
				color: var(--dark-brown);
			}

			.story-image-wrapper {
				position: relative;
			}

			.story-image-frame {
				border-radius: 18px;
				overflow: hidden;
				box-shadow: 0 14px 40px rgba(38, 45, 38, 0.12);
			}

			.story-img {
				width: 100%;
				aspect-ratio: 4 / 5;
				object-fit: cover;
				display: block;
				transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
			}

			.story-img:hover {
				transform: scale(1.04);
			}

			.story-image-accent {
				position: absolute;
				top: -15px;
				right: -15px;
				width: 100%;
				height: 100%;
				border: 2px solid var(--tan);
				border-radius: 18px;
				z-index: -1;
				opacity: 0.5;
			}

			/* ───────── Values / Mission & Vision ───────── */
			.values-section {
				background:
					linear-gradient(rgba(245, 244, 239, 0.96), rgba(245, 244, 239, 0.96)),
					url('/assets/images/pattern-design.png') center/620px repeat;
				padding: 6rem 2rem;
			}

			.values-container {
				max-width: 1100px;
				margin: 0 auto;
			}

			.values-header {
				text-align: center;
				margin-bottom: 4.5rem;
			}

			.values-header .section-eyebrow {
				margin-bottom: 0.8rem;
			}

			.section-subtitle {
				font-family: 'Inter', sans-serif;
				font-size: 1.05rem;
				font-weight: 300;
				color: var(--dark-brown);
				margin-top: 0.8rem;
				line-height: 1.6;
			}

			/* Alternating editorial rows */
			.value-row {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 3.5rem;
				align-items: center;
				margin-bottom: 5rem;
				position: relative;
			}

			.value-row:last-child {
				margin-bottom: 0;
			}

			.value-row.reversed .value-row-image {
				order: 2;
			}
			.value-row.reversed .value-row-text {
				order: 1;
			}

			.value-row-image {
				position: relative;
				border-radius: 18px;
				overflow: hidden;
				box-shadow: 0 14px 40px rgba(38, 45, 38, 0.1);
			}

			.value-row-image img {
				width: 100%;
				aspect-ratio: 4 / 3;
				object-fit: cover;
				display: block;
				transition: transform 0.7s cubic-bezier(0.16, 1, 0.3, 1);
			}

			.value-row-image:hover img {
				transform: scale(1.04);
			}

			.value-row-text {
				position: relative;
				padding: 1rem 0;
			}

			.value-number {
				font-family: 'Playfair Display', serif;
				font-size: clamp(6rem, 10vw, 9rem);
				font-weight: 700;
				color: var(--tan);
				opacity: 0.18;
				line-height: 1;
				position: absolute;
				top: -2rem;
				left: -0.5rem;
				pointer-events: none;
				user-select: none;
			}

			.value-row.reversed .value-number {
				left: auto;
				right: -0.5rem;
			}

			.value-row-text h3 {
				font-family: 'Playfair Display', serif;
				font-size: clamp(1.6rem, 3vw, 2.2rem);
				font-weight: 600;
				color: var(--very-dark-brown);
				margin-bottom: 1rem;
				position: relative;
			}

			.value-row-text h3::after {
				content: '';
				display: block;
				width: 50px;
				height: 2px;
				background: var(--brown);
				margin-top: 0.8rem;
				transition: width 0.6s ease;
			}

			.scroll-reveal.revealed .value-row-text h3::after {
				width: 80px;
			}

			.value-row-text p {
				font-family: 'Inter', sans-serif;
				font-size: 1.05rem;
				font-weight: 300;
				color: var(--dark-brown);
				line-height: 1.85;
				position: relative;
			}

			/* ───────── Parallax Divider ───────── */
			.parallax-divider {
				position: relative;
				min-height: 400px;
				display: flex;
				align-items: center;
				justify-content: center;
				overflow: hidden;
			}

			.parallax-divider-bg {
				position: absolute;
				inset: -80px;
				z-index: 0;
			}

			.parallax-divider-img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				will-change: transform;
			}

			.parallax-divider-overlay {
				position: absolute;
				inset: 0;
				background: rgba(38, 45, 38, 0.65);
				z-index: 1;
			}

			.parallax-divider-content {
				position: relative;
				z-index: 2;
				text-align: center;
				padding: 3rem 2rem;
			}

			.quote-mark {
				font-family: 'Playfair Display', serif;
				font-size: 4rem;
				color: var(--tan);
				line-height: 1;
				margin-bottom: 0.5rem;
			}

			blockquote {
				font-family: 'Playfair Display', serif;
				font-size: clamp(1.8rem, 4vw, 2.8rem);
				font-weight: 500;
				font-style: italic;
				color: var(--white);
				max-width: 700px;
				margin: 0 auto 1rem;
				line-height: 1.3;
			}

			.quote-attribution {
				font-family: 'Inter', sans-serif;
				font-size: 0.85rem;
				font-weight: 400;
				letter-spacing: 0.1em;
				text-transform: uppercase;
				color: rgba(255, 255, 255, 0.6);
			}

			/* ───────── Philosophy ───────── */
			.philosophy-section {
				background:
					linear-gradient(rgba(255, 255, 255, 0.97), rgba(255, 255, 255, 0.97)),
					url('/assets/images/pattern-design.png') center/560px repeat;
				padding: 6rem 2rem;
			}

			.philosophy-container {
				max-width: 800px;
				margin: 0 auto;
				text-align: center;
			}

			.philosophy-title {
				font-family: 'Playfair Display', serif;
				font-size: clamp(2rem, 4vw, 2.8rem);
				font-weight: 600;
				color: var(--very-dark-brown);
				margin-bottom: 1.5rem;
				line-height: 1.2;
			}

			.animated-underline {
				position: relative;
				display: inline-block;
			}

			.animated-underline::after {
				content: '';
				position: absolute;
				bottom: -4px;
				left: 0;
				width: 0;
				height: 2px;
				background: var(--brown);
				transition: width 0.8s cubic-bezier(0.16, 1, 0.3, 1);
			}

			.scroll-reveal.revealed .animated-underline::after {
				width: 100%;
			}

			.philosophy-divider {
				display: flex;
				align-items: center;
				justify-content: center;
				margin-bottom: 2rem;
			}

			.divider-diamond {
				width: 8px;
				height: 8px;
				background: var(--tan);
				transform: rotate(45deg);
				display: block;
			}

			.philosophy-columns {
				display: grid;
				grid-template-columns: 1fr 1fr;
				gap: 3rem;
				text-align: left;
				margin-bottom: 2.5rem;
				position: relative;
			}

			.philosophy-columns::before {
				content: '';
				position: absolute;
				left: 50%;
				top: 10%;
				bottom: 10%;
				width: 1px;
				background: linear-gradient(
					to bottom,
					transparent,
					var(--tan),
					transparent
				);
			}

			.philosophy-columns p {
				font-family: 'Inter', sans-serif;
				font-size: 1.05rem;
				font-weight: 300;
				line-height: 1.85;
				color: var(--dark-brown);
			}

			.btn-primary {
				display: inline-block;
				background: var(--brown);
				color: var(--white);
				padding: 0.8rem 2rem;
				border-radius: 50px;
				text-decoration: none;
				font-family: 'Inter', sans-serif;
				font-weight: 600;
				font-size: 0.85rem;
				letter-spacing: 0.04em;
				text-transform: uppercase;
				transition: background 0.3s, transform 0.25s, box-shadow 0.3s;
			}

			.btn-primary:hover {
				background: var(--very-dark-brown);
				transform: translateY(-2px);
				box-shadow: 0 8px 18px rgba(38, 45, 38, 0.2);
			}

			/* ───────── Footer ───────── */
			footer {
				background: linear-gradient(rgba(38, 45, 38, 0.94), rgba(38, 45, 38, 0.94));
				color: var(--white);
				padding: 3rem 2rem 2rem;
				position: relative;
				overflow: hidden;
			}

			footer::before {
				content: '';
				position: absolute;
				top: -120px;
				right: -120px;
				width: 280px;
				height: 280px;
				background: radial-gradient(circle, rgba(215, 193, 184, 0.2), transparent 70%);
				pointer-events: none;
			}

			.footer-shell {
				max-width: 1100px;
				margin: 0 auto;
				position: relative;
				z-index: 1;
			}

			.footer-top {
				display: flex;
				justify-content: center;
				align-items: center;
				text-align: center;
				gap: 0.8rem;
				padding-bottom: 1.2rem;
				border-bottom: 1px solid rgba(255, 255, 255, 0.16);
			}

			.footer-brand {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 1rem;
				flex-wrap: wrap;
			}

			.footer-logo {
				height: 44px;
				width: auto;
				display: block;
			}

			.footer-tagline {
				font-family: 'Inter', sans-serif;
				font-size: 0.9rem;
				font-weight: 300;
				color: rgba(255, 255, 255, 0.78);
			}

			.footer-bottom {
				margin-top: 1rem;
				display: flex;
				justify-content: center;
				align-items: center;
				flex-wrap: wrap;
				gap: 0.9rem;
				text-align: center;
			}

			.footer-nav {
				display: flex;
				gap: 1.2rem;
				flex-wrap: wrap;
			}

			.footer-nav a {
				color: rgba(255, 255, 255, 0.75);
				text-decoration: none;
				font-family: 'Inter', sans-serif;
				font-size: 0.84rem;
				font-weight: 400;
				transition: color 0.3s;
			}

			.footer-nav a:hover { color: var(--white); }

			.footer-copy {
				font-family: 'Inter', sans-serif;
				font-size: 0.78rem;
				color: rgba(255, 255, 255, 0.45);
			}

			@media (max-width: 768px) {
				.footer-top {
					grid-template-columns: 1fr;
					text-align: center;
				}

				.footer-brand {
					justify-content: center;
				}

				.footer-bottom {
					justify-content: center;
					text-align: center;
				}
			}

			/* ───────── Responsive ───────── */
			@media (max-width: 1024px) {
				.story-container {
					grid-template-columns: 1fr;
					gap: 2.5rem;
				}
				.story-image-accent { display: none; }
				.story-img { aspect-ratio: 3/2; }
				.value-row {
					gap: 2.5rem;
				}
				.value-row { margin-bottom: 4rem; }
				.value-number { font-size: 6rem; }
			}

			@media (max-width: 768px) {
				header { padding: 0.75rem 0; }
				.header-content {
					flex-direction: column;
					gap: 0.7rem;
					align-items: center;
					padding: 0 1.5rem;
				}
				.logo {
					height: 68px;
					width: 230px;
					overflow: visible;
					display: flex;
					align-items: center;
					justify-content: center;
					margin: 0 auto;
				}
				.logo img {
					transform-origin: center center;
					transform: scale(1.9);
				}
				nav {
					width: 100%;
					justify-content: center;
					flex-wrap: nowrap;
					overflow-x: auto;
					-webkit-overflow-scrolling: touch;
					scrollbar-width: none;
				}
				nav::-webkit-scrollbar { display: none; }
				nav a {
					white-space: nowrap;
					font-size: 0.84rem;
					padding: 0.35rem 0.62rem;
				}
				nav .nav-cta {
					margin-left: 0;
					padding: 0.45rem 0.9rem;
					font-size: 0.72rem;
				}

				.hero { min-height: 60vh; }
				.title-line { font-size: clamp(2.5rem, 10vw, 3.5rem); }
				.hero-description { font-size: 1rem; }
				.hero-scroll-indicator { display: none; }

				.story-section { padding: 4rem 1.5rem; }
				.story-container { grid-template-columns: 1fr; gap: 2rem; }
