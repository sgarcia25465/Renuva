<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		<title>Renuva - Architectural Surface Renewal</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
				--very-dark-brown: #262D26;
				--dark-brown: #5E635D;
				--medium-brown: #8D7C6E;
				--brown: #8D7C6E;
				--light-brown: #ADB69F;
				--tan: #D7C1B8;
				--very-light-brown: #F5F4EF;
				--light-gray: #F5F4EF;
				--white: #FFFFFF;
			}

			html {
				scroll-behavior: smooth;
			}

			html, body {
				overflow-x: hidden;
			}

			body {
				font-family: 'Playfair Display', serif;
				color: var(--dark-brown);
				background: var(--white);
				padding-top: 126px;
			}

			header {
				position: fixed !important;
				top: 0;
				left: 0;
				width: 100%;
				z-index: 1000;
				background:
					linear-gradient(rgba(250, 249, 246, 0.96), rgba(250, 249, 246, 0.96)),
					url('/assets/images/pattern-design.png') center/620px repeat;
				backdrop-filter: blur(10px);
				-webkit-backdrop-filter: blur(10px);
				padding: 1.35rem 0;
				border-bottom: none;
				box-shadow: none;
			}

			.header-content {
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0 2rem 0 clamp(2.2rem, 8vw, 8rem);
			}

			.logo {
				height: 68px;
				width: 230px;
				overflow: visible;
				display: flex;
				align-items: center;
				justify-content: flex-start;
			}

			.logo img {
				height: 100%;
				width: auto;
				display: block;
				transform: scale(2.15);
				transform-origin: left center;
			}

			nav {
				display: flex;
				align-items: center;
				gap: 0.25rem;
			}

			nav a {
				text-decoration: none;
				color: var(--dark-brown);
				font-family: 'Playfair Display', serif;
				font-weight: 500;
				font-size: 1.05rem;
				letter-spacing: 0.02em;
				padding: 0.5rem 1.2rem;
				border-radius: 8px;
				transition: color 0.3s, background 0.3s;
			}

			nav a:hover {
				color: var(--brown);
				background: rgba(141, 124, 110, 0.07);
			}

			nav .nav-cta {
				background: var(--brown);
				color: var(--white);
				border-radius: 50px;
				padding: 0.6rem 1.5rem;
				font-weight: 600;
				font-size: 0.93rem;
				margin-left: 0.5rem;
				transition: background 0.3s, transform 0.3s;
			}

			nav .nav-cta:hover {
				background: var(--very-dark-brown);
				color: var(--white);
				transform: translateY(-1px);
			}

			/* Hero kept exactly as requested */
			.hero {
				background:
					linear-gradient(rgba(250, 249, 246, 0.96), rgba(250, 249, 246, 0.96)),
					url('/assets/images/pattern-design.png') center/620px repeat;
				padding: 2.1rem 0 2.8rem 0;
				margin-top: 92px;
			}

			.hero-shell {
				width: 100%;
				margin: 0;
				display: grid;
				grid-template-columns: minmax(420px, 700px) minmax(0, 1fr);
				gap: 2rem;
				align-items: center;
			}

			.hero-content {
				max-width: 620px;
				text-align: left;
				padding-left: clamp(2.2rem, 8vw, 8rem);
			}

			.hero-eyebrow {
				font-family: 'Inter', sans-serif;
				font-size: 0.8rem;
				font-weight: 500;
				letter-spacing: 0.22em;
				text-transform: uppercase;
				color: var(--light-brown);
				margin-bottom: 1rem;
				display: block;
			}

			.hero h1 {
				font-family: 'Playfair Display', serif;
				font-size: clamp(2.75rem, 6vw, 4.35rem);
				font-weight: 500;
				line-height: 1.05;
				margin-bottom: 1.15rem;
				color: var(--brown);
			}

			.hero p {
				font-family: 'Inter', sans-serif;
				font-size: 1.07rem;
				font-weight: 300;
				line-height: 1.66;
				color: var(--dark-brown);
				margin: 0 0 2rem;
				max-width: 560px;
			}

			.hero-buttons {
				display: flex;
				gap: 1rem;
				justify-content: flex-start;
				flex-wrap: wrap;
			}

			.btn-primary {
				display: inline-block;
				background: var(--brown);
				color: var(--white);
				padding: 0.62rem 1.35rem;
				border-radius: 50px;
				text-decoration: none;
				font-family: 'Inter', sans-serif;
				font-weight: 600;
				font-size: 0.82rem;
				letter-spacing: 0.04em;
				text-transform: uppercase;
				transition: background 0.3s, transform 0.25s, box-shadow 0.3s;
			}

			.btn-primary:hover {
				background: var(--very-dark-brown);
				transform: translateY(-2px);
				box-shadow: 0 8px 18px rgba(38, 45, 38, 0.2);
			}

			.hero-media {
				position: relative;
				border-radius: 54px 0 0 54px;
				overflow: hidden;
				min-height: 520px;
				isolation: isolate;
				box-shadow: 0 14px 36px rgba(38, 45, 38, 0.16);
				margin-right: -2rem;
			}

			.hero-slide {
				position: absolute;
				inset: 0;
				width: 100%;
				height: 100%;
				object-fit: cover;
				display: block;
				opacity: 0;
				animation: heroCrossfade 18s infinite ease-in-out;
			}

			.hero-slide:nth-child(1) { animation-delay: 0s; }
			.hero-slide:nth-child(2) { animation-delay: 6s; }
			.hero-slide:nth-child(3) { animation-delay: 12s; }

			@keyframes heroCrossfade {
				0%, 28% { opacity: 1; }
				38%, 95% { opacity: 0; }
				100% { opacity: 1; }
			}

			/* New homepage sections */
			main {
				background:
					radial-gradient(circle at 10% 10%, rgba(215, 193, 184, 0.22), transparent 35%),
					radial-gradient(circle at 90% 20%, rgba(173, 182, 159, 0.25), transparent 40%);
			}

			.section-wrap {
				padding: 5rem 2rem;
			}

			.section-shell {
				max-width: 1140px;
				margin: 0 auto;
			}

			.kicker {
				font-family: 'Inter', sans-serif;
				font-size: 0.77rem;
				font-weight: 600;
				letter-spacing: 0.2em;
				text-transform: uppercase;
				color: var(--light-brown);
				display: block;
				margin-bottom: 0.8rem;
			}

			.section-headline {
				font-size: clamp(2.1rem, 4.2vw, 3.2rem);
				font-weight: 600;
				line-height: 1.14;
				color: var(--brown) !important;
				margin-bottom: 0.9rem;
			}

			.section-copy {
				font-family: 'Inter', sans-serif;
				font-size: 1rem;
				font-weight: 300;
				line-height: 1.75;
				color: var(--dark-brown);
			}

			.story-grid {
				display: grid;
				grid-template-columns: 1.05fr 0.95fr;
				gap: 2rem;
				align-items: center;
			}

			.story-cards {
				display: grid;
				grid-template-columns: repeat(2, minmax(0, 1fr));
				gap: 0.9rem;
				margin-top: 1.6rem;
			}

			.story-card {
				padding: 1rem;
				border-radius: 14px;
				background: rgba(255, 255, 255, 0.85);
				border: 1px solid rgba(173, 182, 159, 0.35);
				box-shadow: 0 8px 24px rgba(38, 45, 38, 0.07);
			}

			.story-card h3 {
				font-size: 1.15rem;
				font-weight: 600;
				color: var(--very-dark-brown);
				margin-bottom: 0.4rem;
			}

			.story-card p {
				font-family: 'Inter', sans-serif;
				font-size: 0.9rem;
				font-weight: 300;
				line-height: 1.6;
				color: var(--dark-brown);
			}

			.story-media {
				position: relative;
				border-radius: 20px;
				overflow: hidden;
				box-shadow: 0 20px 46px rgba(38, 45, 38, 0.15);
				max-width: 430px;
				justify-self: center;
				background: var(--white);
			}

			.story-media img {
				width: 100%;
				height: 100%;
				display: block;
				object-fit: contain;
				aspect-ratio: 3/5;
				transition: transform 0.7s ease;
			}

			.story-media:hover img {
				transform: scale(1.04);
			}

			.stats-bar {
				padding: 1.4rem 2rem 0.2rem;
				margin-top: 0.6rem;
			}

			.stats-grid {
				max-width: 900px;
				margin: 0 auto;
				display: grid;
				grid-template-columns: repeat(4, 1fr);
				gap: 1.5rem;
				text-align: center;
			}

			.stat-number {
				font-family: 'Playfair Display', serif;
				font-size: 2.2rem;
				font-weight: 700;
				color: var(--brown);
				line-height: 1;
				margin-bottom: 0.35rem;
			}

			.stat-label {
				font-family: 'Inter', sans-serif;
				font-size: 0.78rem;
				font-weight: 500;
				color: var(--dark-brown);
				text-transform: uppercase;
				letter-spacing: 0.1em;
			}

			.vinyl-showcase {
				background:
					linear-gradient(rgba(245, 244, 239, 0.96), rgba(245, 244, 239, 0.96)),
					url('/assets/images/pattern-design.png') center/560px repeat;
			}

			.vinyl-grid {
				display: grid;
				grid-template-columns: 1.05fr 0.95fr;
				gap: 1rem;
				margin-top: 1.8rem;
			}

			.vinyl-stack {
				display: grid;
				grid-template-columns: repeat(2, minmax(0, 1fr));
				gap: 1rem;
			}

			.vinyl-card {
				border-radius: 16px;
				background: var(--white);
				border: 1px solid rgba(173, 182, 159, 0.35);
				box-shadow: 0 12px 30px rgba(38, 45, 38, 0.08);
				overflow: hidden;
				transition: transform 0.35s ease, box-shadow 0.35s ease;
			}

			.vinyl-card:hover {
				transform: translateY(-6px);
				box-shadow: 0 16px 36px rgba(38, 45, 38, 0.12);
			}

			.vinyl-card img {
				width: 100%;
				height: 180px;
				display: block;
				object-fit: cover;
			}

			.vinyl-body {
				padding: 1rem;
			}

			.vinyl-step {
				font-family: 'Inter', sans-serif;
				font-size: 0.72rem;
				font-weight: 600;
				letter-spacing: 0.15em;
				text-transform: uppercase;
				color: var(--light-brown);
				display: block;
				margin-bottom: 0.35rem;
			}

			.vinyl-card h3 {
				font-size: 1.42rem;
				font-weight: 600;
				color: var(--very-dark-brown);
				margin-bottom: 0.35rem;
			}

			.vinyl-card p {
				font-family: 'Inter', sans-serif;
				font-size: 0.88rem;
				line-height: 1.62;
				color: var(--dark-brown);
			}

			.vinyl-detail {
				border-radius: 16px;
				background: rgba(255, 255, 255, 0.88);
				border: 1px solid rgba(173, 182, 159, 0.35);
				padding: 1.25rem;
				box-shadow: 0 12px 30px rgba(38, 45, 38, 0.08);
			}

			.vinyl-detail h3 {
				font-size: 1.8rem;
				color: var(--very-dark-brown);
				margin-bottom: 0.55rem;
			}

			.vinyl-detail p {
				font-family: 'Inter', sans-serif;
				font-size: 0.92rem;
				line-height: 1.66;
				color: var(--dark-brown);
			}

			.vinyl-chip-row {
				display: flex;
				flex-wrap: wrap;
				gap: 0.6rem;
				margin-top: 1rem;
			}

			.vinyl-chip {
				font-family: 'Inter', sans-serif;
				font-size: 0.74rem;
				font-weight: 600;
				letter-spacing: 0.07em;
				text-transform: uppercase;
				border-radius: 999px;
				padding: 0.45rem 0.75rem;
				background: rgba(141, 124, 110, 0.12);
				color: var(--brown);
				border: 1px solid rgba(141, 124, 110, 0.24);
			}

			.split-cta {
				margin-top: 1.2rem;
				display: flex;
				justify-content: space-between;
				align-items: center;
				gap: 1rem;
				padding: 1.1rem;
				border-radius: 14px;
				background: rgba(255, 255, 255, 0.88);
				border: 1px solid rgba(173, 182, 159, 0.35);
			}

			.split-cta p {
				font-family: 'Inter', sans-serif;
				font-size: 0.92rem;
				line-height: 1.6;
				color: var(--dark-brown);
			}

			.split-cta a {
				flex-shrink: 0;
			}

			.apps-grid {
				display: grid;
				grid-template-columns: repeat(4, minmax(0, 1fr));
				gap: 1rem;
				margin-top: 1.6rem;
			}

			.app-card {
				border-radius: 16px;
				overflow: hidden;
				background: var(--white);
				border: 1px solid rgba(173, 182, 159, 0.32);
				box-shadow: 0 8px 24px rgba(38, 45, 38, 0.08);
				transition: transform 0.35s ease, box-shadow 0.35s ease;
			}

			.app-card:hover {
				transform: translateY(-6px);
				box-shadow: 0 14px 30px rgba(38, 45, 38, 0.14);
			}

			.app-card img {
				width: 100%;
				height: 180px;
				display: block;
				object-fit: cover;
			}

			.app-body {
				padding: 1rem;
			}

			.app-body h3 {
				font-size: 1.3rem;
				margin-bottom: 0.35rem;
				color: var(--very-dark-brown);
			}

			.app-body p {
				font-family: 'Inter', sans-serif;
				font-size: 0.88rem;
				font-weight: 300;
				line-height: 1.6;
				color: var(--dark-brown);
			}

			.process {
				background: var(--very-light-brown);
			}

			.process-grid {
				display: grid;
				grid-template-columns: repeat(4, minmax(0, 1fr));
				gap: 1rem;
				margin-top: 1.5rem;
			}

			.process-card {
				padding: 1.1rem;
				border-radius: 14px;
				background: var(--white);
				border: 1px solid rgba(173, 182, 159, 0.3);
			}

			.process-num {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				width: 34px;
				height: 34px;
				border-radius: 50%;
				background: var(--brown);
				color: var(--white);
				font-family: 'Inter', sans-serif;
				font-size: 0.85rem;
				font-weight: 700;
				margin-bottom: 0.6rem;
			}

			.process-card h3 {
				font-size: 1.25rem;
				margin-bottom: 0.4rem;
				color: var(--very-dark-brown);
			}

			.process-card p {
				font-family: 'Inter', sans-serif;
				font-size: 0.88rem;
				line-height: 1.58;
				color: var(--dark-brown);
			}

			.final-cta {
				position: relative;
				min-height: 350px;
				display: flex;
				align-items: center;
				justify-content: center;
				text-align: center;
				overflow: hidden;
			}

			.final-cta-media {
				position: absolute;
				inset: -80px;
				z-index: 0;
			}

			.final-cta-media img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				will-change: transform;
			}

			.final-cta::before {
				content: "";
				position: absolute;
				inset: 0;
				background: rgba(38, 45, 38, 0.72);
				z-index: 1;
			}

			.final-cta-content {
				position: relative;
				z-index: 2;
				max-width: 720px;
				padding: 2rem;
			}

			.final-cta-content h2 {
				font-size: clamp(2rem, 4vw, 3rem);
				color: var(--white);
				margin-bottom: 0.8rem;
			}

			.final-cta-content p {
				font-family: 'Inter', sans-serif;
				font-size: 1.02rem;
				line-height: 1.72;
				color: rgba(255, 255, 255, 0.85);
				margin-bottom: 1.4rem;
			}

			.btn-light {
				display: inline-block;
				background: var(--white);
				color: var(--very-dark-brown);
				padding: 0.82rem 2.1rem;
				border-radius: 999px;
				text-decoration: none;
				font-family: 'Inter', sans-serif;
				font-size: 0.82rem;
				font-weight: 600;
				letter-spacing: 0.06em;
				text-transform: uppercase;
				transition: background 0.3s ease, transform 0.3s ease;
			}

			.btn-light:hover {
				background: var(--tan);
				transform: translateY(-2px);
			}

			footer {
				background:
					linear-gradient(rgba(38, 45, 38, 0.94), rgba(38, 45, 38, 0.94)),
					url('/assets/images/pattern-design.png') center/560px repeat;
				color: var(--white);
				padding: 3rem 2rem 2rem;
				position: relative;
				overflow: hidden;
			}

			footer::before {
				content: "";
				position: absolute;
				top: -120px;
				right: -120px;
				width: 280px;
				height: 280px;
				background: radial-gradient(circle, rgba(215, 193, 184, 0.2), transparent 70%);
				pointer-events: none;
			}

			.footer-shell {
				max-width: 1100px;
				margin: 0 auto;
				position: relative;
				z-index: 1;
			}

			.footer-top {
				display: flex;
				justify-content: center;
				align-items: center;
				text-align: center;
				gap: 0.8rem;
				padding-bottom: 1.2rem;
				border-bottom: 1px solid rgba(255, 255, 255, 0.16);
			}

			.footer-brand {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 1rem;
				flex-wrap: wrap;
			}

			.footer-logo {
				height: 44px;
				width: auto;
				display: block;
			}

			footer .footer-tagline {
				font-family: 'Inter', sans-serif;
				font-size: 0.9rem;
				font-weight: 300;
				color: rgba(255, 255, 255, 0.78);
			}

			.footer-bottom {
				margin-top: 1rem;
				display: flex;
				justify-content: center;
				align-items: center;
				flex-wrap: wrap;
				gap: 0.9rem;
				text-align: center;
			}

			.footer-nav {
				display: flex;
				gap: 1.2rem;
				flex-wrap: wrap;
			}

			.footer-nav a {
				color: rgba(255, 255, 255, 0.75);
				text-decoration: none;
				font-family: 'Inter', sans-serif;
				font-size: 0.84rem;
				font-weight: 400;
				transition: color 0.3s;
			}

			.footer-nav a:hover {
				color: var(--white);
			}

			footer .footer-copy {
				font-family: 'Inter', sans-serif;
				font-size: 0.78rem;
				color: rgba(255, 255, 255, 0.45);
			}

			@media (max-width: 768px) {
				.footer-top {
					grid-template-columns: 1fr;
					text-align: center;
				}

				.footer-brand {
					justify-content: center;
				}

				.footer-bottom {
					justify-content: center;
					text-align: center;
				}
			}

			.reveal {
				opacity: 0;
				transform: translateY(24px);
				transition: opacity 0.75s ease, transform 0.75s ease;
			}

			.reveal.in-view {
				opacity: 1;
				transform: translateY(0);
			}

			@media (max-width: 1100px) {
				.apps-grid {
					grid-template-columns: repeat(2, minmax(0, 1fr));
				}

				.process-grid {
					grid-template-columns: repeat(2, minmax(0, 1fr));
				}
			}

			@media (max-width: 900px) {
				.story-grid,
				.vinyl-grid {
					grid-template-columns: 1fr;
				}

				.vinyl-stack {
					grid-template-columns: 1fr;
				}
			}

			@media (max-width: 768px) {
				body { padding-top: 380px !important; }

				header { padding: 0.75rem 0; }

				.header-content {
					flex-direction: column;
					gap: 0.7rem;
					align-items: center;
				}

				.logo {
					justify-content: center;
					margin: 0 auto;
				}

				.logo img {
					transform-origin: center center;
					transform: scale(1.9);
				}

				nav {
					width: 100%;
					justify-content: center;
					flex-wrap: nowrap;
					overflow-x: auto;
					-webkit-overflow-scrolling: touch;
					scrollbar-width: none;
				}

				nav::-webkit-scrollbar { display: none; }

				nav a {
					white-space: nowrap;
					font-size: 0.8rem;
