		<title>Renuva - Kitchen Wrapping Solutions</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			:root {
			--very-dark-brown: #3E2723;
			--dark-brown: #5C4033;
			--medium-brown: #704214;
			--brown: #8B6F47;
			--light-brown: #A0826D;
			--tan: #D4A574;
			--very-light-brown: #E8D7C3;
			--white: #FFFFFF;
			}

			html, body {
				overflow-x: hidden;
			}

			body {
			font-family: 'Inter', sans-serif;
				color: var(--dark-brown);
			}

			header {
				background-color: var(--white);
				padding: 1.5rem 0;
			border-bottom: 5px solid var(--brown);
				box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
			}

			.header-content {
				max-width: 1200px;
				margin: 0 auto;
				display: flex;
				justify-content: space-between;
				align-items: center;
				padding: 0 2rem;
			}

			.logo {
				height: 60px;
			}

			.logo img {
				height: 100%;
				width: auto;
			}

			nav a {
				margin-left: 2rem;
				text-decoration: none;
				color: var(--dark-brown);
				font-family: 'Inter', sans-serif;
				font-weight: 500;
				font-size: 1.05rem;
				letter-spacing: 0.02em;
				text-transform: none;
				transition: color 0.3s;
			}

			nav a:hover {
				color: var(--tan);
			}

			.hero {
				background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/image.png') center/cover no-repeat;
				color: var(--white);
  				text-align: center;

  				min-height: 105vh;        /* keeps the picture tall */
  				padding: 10rem 2rem;      /* small top padding so text is near top */

  				display: flex;
  				align-items: flex-start; /* stick content to top */
			}

			.hero-content {
				max-width: 800px;
				margin: 0 auto;
				padding-top: 0;
			}

			.hero h1 {
				font-family: 'Inter', sans-serif;
				font-size: 4rem;
				font-weight: 600;
				letter-spacing: 0.01em;
				text-transform: none;
				margin-bottom: 1rem;
				text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
			}

			.hero p {
				font-size: 1.3rem;
				margin-bottom: 2rem;
			}

			.cta-button {
				display: inline-block;
				background-color: var(--white);
				color: var(--brown);
				padding: 1rem 2.5rem;
				border-radius: 50px;
				text-decoration: none;
				font-family: 'Inter', sans-serif;
				font-weight: 600;
				letter-spacing: 0.02em;
				text-transform: none;
				transition: all 0.3s;
				font-size: 0.95rem;
			}

			.cta-button:hover {
				background-color: var(--light-gray);
				transform: translateY(-2px);
				box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
			}

			.categories {
				max-width: 1200px;
				margin: 4rem auto;
				padding: 0 2rem;
				text-align: center;
			}

			.categories h2 {
				font-family: 'Inter', sans-serif;
				font-size: 3rem;
				font-weight: 600;
				letter-spacing: 0.01em;
				text-transform: none;
				color: var(--brown);
				margin-bottom: 3rem;
			}

			.categories-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
			}

			.category-card {
				background-color: var(--very-light-brown);
				padding: 3rem 2rem;
				border-radius: 15px;
				border: 2px solid var(--light-brown);
				transition: all 0.3s;
				text-align: center;
			}

			.category-card:hover {
				transform: translateY(-10px);
				box-shadow: 0 15px 40px rgba(139, 111, 71, 0.15);
			}

			.category-image {
				width: 100%;
				height: 200px;
				object-fit: cover;
				border-radius: 10px;
				margin-bottom: 1.5rem;
			}

			.category-card h3 {
				color: var(--brown);
				margin-bottom: 1rem;
				font-size: 1.5rem;
			}

			.category-card p {
				color: var(--dark-brown);
				line-height: 1.8;
				margin-bottom: 1.5rem;
			}

			.category-link {
				color: var(--tan);
				text-decoration: none;
				font-weight: 600;
				transition: color 0.3s;
			}

			.category-link:hover {
				color: var(--brown);
			}

			.gallery-section {
				max-width: 1400px;
				margin: 6rem auto;
				padding: 0 2rem;
			}

			.gallery-header {
				text-align: center;
				margin-bottom: 3rem;
			}

			.gallery-header h2 {
				font-family: 'Inter', sans-serif;
				font-size: 3.5rem;
				font-weight: 600;
				letter-spacing: 0.01em;
				text-transform: none;
				color: var(--brown);
				margin-bottom: 0.5rem;
			}

			.gallery-header p {
				font-size: 1.2rem;
				color: var(--dark-brown);
			}

			.gallery-grid {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 2rem;
			}

			.gallery-item {
				position: relative;
				border-radius: 20px;
				overflow: hidden;
				box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
				transition: all 0.4s ease;
				aspect-ratio: 4 / 3;
			}

			.gallery-item:hover {
				transform: translateY(-10px);
				box-shadow: 0 20px 50px rgba(139, 111, 71, 0.3);
			}

			.gallery-item img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.4s ease;
			}

			.gallery-item:hover img {
				transform: scale(1.05);
			}

			@media (max-width: 1024px) {
				.gallery-grid {
					grid-template-columns: repeat(2, 1fr);
				}
			}

			@media (max-width: 768px) {
				.gallery-grid {
					grid-template-columns: 1fr;
				}
			}

			.about-section {
				background: linear-gradient(rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.95)),
							url('/assets/images/livingroom.png') center/cover no-repeat;
				padding: 4rem 2rem;
			}

			.about-content {
				max-width: 1000px;
				margin: 0 auto;
				padding: 4rem 2rem;
				background: linear-gradient(135deg, #F5EEE6 0%, #E8D7C3 100%);
				border-radius: 15px;
				border: 2px solid var(--light-brown);
				text-align: center;
				display: flex;
				flex-direction: column;
				align-items: center;
			}

			.about-section h2 {
				font-family: 'Inter', sans-serif;
				font-size: 2.8rem;
				font-weight: 600;
				letter-spacing: 0.01em;
				text-transform: none;
				color: var(--brown);
				margin-bottom: 1.5rem;
			}

			.about-section p {
				color: var(--dark-brown);
				line-height: 1.8;
				margin-bottom: 2rem;
				font-size: 1.1rem;
			}

			.cta-button-about {
				display: inline-block;
				background-color: var(--brown);
				color: var(--white);
				padding: 1rem 2.5rem;
				border-radius: 50px;
				text-decoration: none;
				font-family: 'Inter', sans-serif;
				font-weight: 600;
				letter-spacing: 0.02em;
				text-transform: none;
				transition: all 0.3s;
				font-size: 0.95rem;
			}

			.cta-button-about:hover {
				background-color: var(--dark-brown);
				transform: translateY(-2px);
				box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
			}

			footer {
			background: linear-gradient(135deg, var(--light-brown) 0%, var(--brown) 100%);
			color: var(--white);
				text-align: center;
				padding: 2rem;
				margin-top: 2rem;
			}

			footer p {
				margin: 0.5rem 0;
			}

			.footer-links {
				margin-top: 1rem;
			}

			.footer-links a {
				color: var(--white);
				text-decoration: none;
				margin: 0 1rem;
				transition: color 0.3s;
			}

			.footer-links a:hover {
				color: var(--white);
			}

			@media (max-width: 768px) {
				.header-content {
					flex-direction: column;
					gap: 1rem;
				}

				nav a {
					margin-left: 1rem;
				}

				.hero {
					min-height: 70vh;
					padding: 4rem 1.5rem;
				}

				.hero h1 {
					font-size: 2rem;
				}

				.hero p {
					font-size: 1rem;
				}

				.categories h2 {
					font-size: 2rem;
				}

				.categories-grid {
					grid-template-columns: 1fr;
				}

				.gallery-header h2 {
					font-size: 2rem;
				}

				.gallery-section {
					padding: 0 1.5rem;
					margin: 3rem auto;
				}

				.about-section h2 {
					font-size: 2rem;
				}

				.about-content {
					padding: 2rem 1.5rem;
				}
			}
		</style>
	</head>
